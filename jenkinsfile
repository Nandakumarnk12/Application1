pipeline {
    agent any
    environment {
        SCANNER_HOME = tool 'sonarqube'
    }

    stages {
        stage('git') {
            steps {
                git 'https://github.com/Nandakumarnk12/Application1.git'
            }
        }
       stage('compile') {
            steps {
              sh 'mvn compile'
            }
        }
        stage('code analysis') {
            steps {
              withSonarQubeEnv('sonar-server') {
               sh ''' $SCANNER_HOME/bin/sonar-scanner -Dsonar.projectName=Application1 \
               -Dsonar.java.binaries=. \
               -Dsonar.projectKey=Application1'''
              }
            }
        }
        stage('build') {
            steps {
                sh 'mvn clean install'
            }
        }
        
        stage('image') {
            steps {
                sh 'docker build -t spring-boot .'
            }
        }
        stage('container') {
            steps {
                sh 'docker run -itd --name java-container -p 8081:8080 spring-boot'
            }
        }
    }
}

